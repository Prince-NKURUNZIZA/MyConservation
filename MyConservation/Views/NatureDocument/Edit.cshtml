@model MyConservation.Models.NatureDocument

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2 id="Acc">Modifier la nature du document</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Domaine Formation</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
           <h3>Nom du domaine</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nature)
            @Html.ValidationMessageFor(model => model.nature)
        </div> <br />

        <p>
            <button type="submit" value="Save" class="btn btn-info">Modifier</button>
           <button type="reset"  class="btn btn-danger">Annuler</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourne sur la liste", "Index")
</div>
</div>