@model IEnumerable<MyConservation.Models.Galery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2>Nos Galeries </h2>
    @if (TempData["AlertMessage"] != null) { 
    
        <div class="alert alert-success">
     <strong>Success !</strong>   @TempData["AlertMessage"]

    </div>
    
    }

    <div class="row">
			<div class="col-lg-12">
				<h1 class="page-header" id="Acc"><i class="fa fa-first-order" aria-hidden="true"></i>Galeries</h1>
			</div>
		</div><!--/.row-->
<h4 class="btn btn-success">
    
    @Html.ActionLink("+Ajouter dans la galerie", "Create")
        
</h4> <br /><br />
<table class="table table-striped">
    <thead >
    <tr>
        <th>
            #
        </th>
        <th>
            Photo
        </th>
        <th>
            Titre d'evenement
        </th>
        <th>
            Actions
        </th>
    </tr>
 </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.evenement)
        </td>
        
        <td>
                      @Html.ActionLink("Modifier", "Edit", new { id = item.id }, new { @class="btn btn-info"}) |
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class="btn btn-warning"}) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id }, new { @class="btn btn-danger"})
        </td>
    </tr>
}
        </tbody>

</table>
</div>