@model MyConservation.Models.Document

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/LayoutsEtudiant/_Default.cshtml";
}

<header id="head" class="secondary"></header>
<div class="container Acceuil">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
<h2 id="Acc">Modifier votre document</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        

        <div class="editor-label">
         <label for="inputEmail4" class="form-label">Titre</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.titre)
            @Html.ValidationMessageFor(model => model.titre)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Auteur</label>
        </div>
        <div class="editor-field">
             
                  @Html.DropDownList("nomAuteur", String.Empty)
            @Html.ValidationMessageFor(model => model.nomAuteur)
                 
         
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Universite</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("universite", String.Empty)
            @Html.ValidationMessageFor(model => model.universite)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Diplome</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("diplome", String.Empty)
            @Html.ValidationMessageFor(model => model.diplome)
        </div>

        <div class="editor-label">
          <label for="inputEmail4" class="form-label">Domaine de formation</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("domaine", String.Empty)
            @Html.ValidationMessageFor(model => model.domaine)
        </div>

        <div class="editor-label">
        <label for="inputEmail4" class="form-label">Nature du Document</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("nature", String.Empty)
            @Html.ValidationMessageFor(model => model.nature)
        </div>

        <div class="editor-label">
        <label for="inputEmail4" class="form-label">Annee</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.annee)
            @Html.ValidationMessageFor(model => model.annee)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Fichier</label>
        </div>
        <div class="editor-field">
           <input type="file" name="fichier" id="fichier"  required>
        @Html.ValidationMessageFor(model => model.fichier)
        </div>

        <div class="editor-label">
            <label for="inputEmail4" class="form-label">Etat de Publication</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.etatPublication)
            @Html.ValidationMessageFor(model => model.etatPublication)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Autorisation de telechargement</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.autoriseTelecharge)
            @Html.ValidationMessageFor(model => model.autoriseTelecharge)
        </div>

        <p>
            <button type="submit" value="Save" class="btn btn-info">Modifier</button>
               <button type="reset" class="btn btn-danger">Annuler</button>
            
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourne sur la page d'acceuil", "Acceuil")
</div>
</div>
