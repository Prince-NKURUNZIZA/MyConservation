@model MyConservation.Models.Etudiant

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2 id="Acc">Modifier  le compte etudiant</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Etudiant</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
          <label for="inputEmail4" class="form-label">Nom</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nom)
            @Html.ValidationMessageFor(model => model.nom)
        </div>

        <div class="editor-label">
            <label for="inputEmail4" class="form-label">Prenom</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.prenom)
            @Html.ValidationMessageFor(model => model.prenom)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Adresse</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.adresse)
            @Html.ValidationMessageFor(model => model.adresse)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Email</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Sexe</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sexe)
            @Html.ValidationMessageFor(model => model.sexe)
        </div>

        <div class="editor-label">
           <label for="inputEmail4" class="form-label">Nationalite</label>
        </div>
        <div class="editor-field">
            
            @Html.EditorFor(model => model.nationalite)
            @Html.ValidationMessageFor(model => model.nationalite)
        </div>

        
        <br />

        <p>
            <button type="submit" value="Save" class="btn btn-info">Modifier</button>
               <button type="reset" class="btn btn-danger">Annuler</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour sur la liste", "Index")
</div>
</div>