@model MyConservation.Models.Universite

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2 id="Acc">Modifier l'université</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Universite</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            <h3>Nom de l'université</h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nomUniversite)
            @Html.ValidationMessageFor(model => model.nomUniversite)
        </div><br />

        <p>
           <button type="submit" value="Save" class="btn btn-info">Modifier</button> 
            
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourne sur la liste", "Index")
</div>
</div>