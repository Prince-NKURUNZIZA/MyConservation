@model IEnumerable<MyConservation.Models.Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2>Liste des messages </h2>
    @if (TempData["AlertMessage"] != null) { 
    
        <div class="alert alert-success">
     <strong>Success !</strong>   @TempData["AlertMessage"]

    </div>
    
    }

    <div class="row">
			<div class="col-lg-12">
				<h1 class="page-header" id="Acc"><i class="fa fa-first-order" aria-hidden="true"></i>Boite de reception des Messages</h1>
			</div>
		</div><!--/.row-->
 <br /><br />
<table id="exemple" class="table table-striped table-bordered ">
    
    <thead class="Thead">
    <tr>
        <th>
            #
        </th>
        <th>
            Nom
        </th>
        <th>
            Email
        </th>
        <th>
            Telephone
        </th>
        <th>
            Objet
        </th>
        <th>
            Message
        </th>
        <th>
            Actions
        </th>
    </tr>
 </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.objet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.message1)
        </td>
        <td>
                     
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class="btn btn-warning"}) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id }, new { @class="btn btn-danger"})
        </td>
    </tr>
}
        </tbody>

</table>
</div>
@section scripts{
    <script src="~/Scripts/DataTable.js"></script>
    
    }