@model MyConservation.Models.Etudiant

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/LayoutsEtudiant/_Default.cshtml";
}
<header id="head" class="secondary"></header>
<div class="col-sm-7 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="Container Acceuil">
<h1 id="Acc">Les details de votre compte</h1>

<fieldset>
    <legend>Etudiant</legend>

    <div class="display-label">
        <h3> Nom : @Html.DisplayFor(model => model.nom) </h3>
    </div>
    
    <div class="display-label">
       <h3> Prenom :  @Html.DisplayFor(model => model.prenom)</h3>
    </div>

    <div class="display-field">
     <h3>Adresse :  @Html.DisplayFor(model => model.adresse)</h3> 
    </div>

    <div class="display-field">
      <h3>Email :  @Html.DisplayFor(model => model.email)</h3> 
    </div>

   <div class="display-field">
      <h3>Sexe :  @Html.DisplayFor(model => model.sexe) </h3>
    </div>

    <div class="display-field">
      <h3>Nationalite :  @Html.DisplayFor(model => model.nationalite) </h3>
    </div>

</fieldset>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id=Model.id }, new{@class="btn btn-info"}) |
    @Html.ActionLink("Retour mon compte", "Index")
</p>
</div>
    </div>