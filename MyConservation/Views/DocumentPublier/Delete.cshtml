@model MyConservation.Models.DocumentPublier

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2 id="Acc"> Supprime un document publié</h2>

<fieldset>
    <legend>Domaine Formation</legend>
    <div class="display-label">
         <h3>Identifiant :</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.id)
    </div>
    <div class="display-label">
         <h3>Titre :</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.titre)
    </div>
    <div class="display-label">
         <h3>Commentaire :</h3>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.commentaire)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <button type="submit" value="Delete" class="btn btn-danger">Supprimer</button>
         |
        @Html.ActionLink("Retourne sur la liste", "Index")
    </p>
}
</div>