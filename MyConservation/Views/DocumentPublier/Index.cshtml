@model IEnumerable<MyConservation.Models.DocumentPublier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2>Liste des natures des documents </h2>
    @if (TempData["AlertMessage"] != null) { 
    
        <div class="alert alert-success">
     <strong>Success !</strong>   @TempData["AlertMessage"]

    </div>
    
    }
        @if (TempData["AlertMessage2"] != null) { 
    
        <div class="alert alert-success">
     <strong>Erreur !</strong>   @TempData["AlertMessage2"]

    </div>
    
    }

    <div class="row">
			<div class="col-lg-12">
				<h1 class="page-header" id="Acc"><i class="fa fa-first-order" aria-hidden="true"></i>Natures des documents</h1>
			</div>
		</div><!--/.row-->
<h4 class="btn btn-success">
    
    @Html.ActionLink("+Nouveau Nature", "Create")
        
</h4> <br /><br />
<table id="exemple" class="table table-striped table-bordered ">
    
    <thead class="Thead">
    <tr>
        <th>
            #
        </th>
        <th>
            Titre du document
        </th>
        <th>
            Commentaire
        </th>
        <th>
            Actions
        </th>
    </tr>
 </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.titre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.commentaire)
        </td>
        <td>
                      @Html.ActionLink("Modifier", "Edit", new { id = item.id }, new { @class="btn btn-info"}) |
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class="btn btn-warning"}) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id }, new { @class="btn btn-danger"})
        </td>
    </tr>
}
        </tbody>

</table>
</div>
@section scripts{
    <script src="~/Scripts/DataTable.js"></script>
    
    }