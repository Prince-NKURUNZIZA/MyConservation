@model MyConservation.Models.Diplome

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
<h2 id="Acc">Modifie un diplome</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Diplome</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
           <h4>Niveau de diplome</h4>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.niveau)
            @Html.ValidationMessageFor(model => model.niveau)
        </div> <br />

        <p>
            <button type="submit" value="Save" class="btn btn-info">Modifier</button>
            
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourne sur la liste", "Index")
</div>
</div>